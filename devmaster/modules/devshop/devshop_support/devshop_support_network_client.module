/**
 * @param $num
 * @param $max
 * @param int $warning_threshold
 * @return string
 */
function devshop_support_limit_class($num, $max, $warning_threshold = 1, $default_class = 'default') {

  if (strtolower($max) == 0) {
    return 'success';
  }

  $num = (int) $num;
  $max = (int) $max;

  if ($max <= $warning_threshold) {
    $warning_threshold = 0;
  }

  if ($num > $max) {
    return 'danger';
  }
  if ($num == $max) {
    return 'warning';
  }
  if ($num >= ($max - $warning_threshold)) {
    return 'warning';
  }
  if ($num < $max) {
    return $default_class;
  }

  return $default_class;
}

