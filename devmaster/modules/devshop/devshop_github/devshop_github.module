/**
 * Get the git sha from the desired path.
 *
 * @param $repo_path
 *
 * @return string
 */
function devshop_environment_get_git_sha($repo_path) {
  return trim(shell_exec("cd {$repo_path}; git rev-parse HEAD  2> /dev/null"));
}
