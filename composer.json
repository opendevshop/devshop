{
    "name": "devshop/cli",
    "description": "Command Line interface for DevShop",
    "require": {
        "knplabs/github-api": "^1.4",
        "cpliakas/git-wrapper": "2.*",
        "asm/php-ansible": "^2.0",
        "mouf/nodejs-installer": "^1.0",
        "php": "^7.1",
        "provision-ops/power-process": "^1.3"
    },
    "require-dev": {
    },
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "jon@thinkdrop.net"
        }
    ],
    "autoload": {
        "psr-0": { "DevShop": "src/" }
    },
    "bin": [
        "scripts/devshop",
        "scripts/branch-or-tag"
    ],
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.1.3"
        },
        "sort-packages:": "true"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "bin-install": [
            "DevShop\\Composer::installBins"
        ],
        "split": [
            "DevShop\\Composer::installBins",
            "DevShop\\Composer::splitRepos"
        ],
        "post-install-cmd": [
            "DevShop\\Composer::installBins"
        ],
        "pre-update-cmd": [
        ],
        "update-roles": [
            "DevShop\\Composer::updateRoles"
        ]
    }
}
